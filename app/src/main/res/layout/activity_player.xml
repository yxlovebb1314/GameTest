<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="game.goldtel.com.gametest.activity.PlayerActivity">

    <game.goldtel.com.gametest.test.PlayerSurfaceView
        android:id="@+id/psv_act_player_player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bt_act_player_bt1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="←"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/bt_act_player_bt2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="→"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/bt_act_player_bt_top"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="↑"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/bt_act_player_bottom"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="↓"
            android:textSize="35sp"
            />


    </LinearLayout>


</LinearLayout>
